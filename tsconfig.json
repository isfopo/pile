{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./out",
    "lib": ["es2022", "webworker"],
    "types": ["vscode", "node"],
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true,
    "stripInternal": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "exclude": ["node_modules", "out", "src/view/**"]
}
